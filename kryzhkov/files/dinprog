n = int(input()) 
d = []
for x in range(n):
	l = [0] * 10
	d.append(l)
d[0][0] = 0 

d[0][1] = 1
d[0][2] = 1
d[0][3] = 1
d[0][4] = 1
d[0][5] = 1
d[0][6] = 1
d[0][7] = 1
d[0][8] = 1
d[0][9] = 1
for i in range(1,n):
	for j in range(1,9):
		d[i][j] = d[i - 1][j] + d[i - 1][j - 1] + d[i - 1][j + 1]
	d[i][0] = d[i - 1][0] + d[i - 1][1]
	d[i][9] = d[i - 1][9] + d[i - 1][8]
print(d[n-1][0] +d[n-1][1] + d[n-1][2] + d[n-1][3]+ d[n-1][4]+ d[n-1][5]+ d[n-1][6]+ d[n-1][7]+ d[n-1][8] + d[n-1][9])
